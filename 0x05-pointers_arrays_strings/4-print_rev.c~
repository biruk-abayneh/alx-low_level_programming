/**
 * main - check the code
 *
 * Return: Always 0.
 */
int main(void)
{
    char *str;

    str = "I do not fear computers. I fear the lack of them - Isaac Asimov";
    print_rev(str);
    return (0);
}
void print_rev(char *s)
{
  int c = 0;
  int i;
    
  while (*s != '\0')
    {
      c++;
      s++;
    }  
  for (i = c; i > 0; i--)
    {
      putchar(*s);
      s--;
    }
  putchar('\n');
}
